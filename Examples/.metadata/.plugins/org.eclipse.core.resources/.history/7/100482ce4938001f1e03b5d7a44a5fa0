	//     _gc9_write_command_8bit(0x2C);
	//     //;

	/**********SLEEP OUT***************/


	_gc9_write_command_8bit(0x11);         //Sleep out
	HAL_Delay(120);                  //ÑÓÊ±120ms
	_gc9_write_command_8bit(0x29);

